<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="memberDao" class="main.DTO.MemberDao"></bean>

	<bean id="printer" class="main.service.MemberPrinter"></bean>

	<bean id="memberRegisterService"
		class="main.service.memberRegisterService">
		<!-- 생성자로 하고 멤버변수가 있을시 constructor-arg사용 -->
		<constructor-arg name="memberDao" ref="memberDao"></constructor-arg>
	</bean>

	<bean id="memberListPrinter"
		class="main.service.MemberListPrinter">
		<constructor-arg name="memberDao" ref="memberDao"></constructor-arg>
		<constructor-arg name="printer" ref="printer"></constructor-arg>
	</bean>

	<bean id="changePasswordService"
		class="main.service.changePasswordService">
		<!-- property는 set으로 했을시 사용 -->
		<!-- 함수명 중요! ex) abc라면 setAbc라고 setter로 명명해야함 -->
		<property name="memberDao" ref="memberDao"></property>
	</bean>

	<bean id="memberInfoPrinter"
		class="main.service.memberInfoPrinter">
		<property name="memberDao" ref="memberDao"></property>
		<property name="printer" ref="printer"></property>
	</bean>
</beans>